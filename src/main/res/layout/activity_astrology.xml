<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/astrology_main"
    android:padding="20dp"


    android:weightSum="7"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:weightSum="5"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Astrology"
            android:textColor="@color/purple_200"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"
            android:text="Astrological beliefs in correspondences between celestial observations and terrestrial events have influenced various aspects of human history, including world-views, language and many elements of social culture."
            android:background="@drawable/background_entity"
            android:textColor="@color/purple_200"
            android:gravity="center"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_marginBottom="30dp"
            />

<!--        optional-->
        <android.widget.Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:text="SignUp"
            android:background="@color/purple_200"
            android:id="@+id/astrology_btn"
            />
    </LinearLayout>

